@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Copies</h1>

@if (@Model.Count == 0)
{
  <h3>No copies have been added yet!</h3>
} 

@foreach (Copy copy in Model)
{
  <li>@Html.ActionLink($"{copy.Book.Title} | {copy.Format} | ID: {copy.CopyId}", "Details", new { id = copy.CopyId })</li>
}

<p>@Html.ActionLink("Add new copy", "Create")</p>